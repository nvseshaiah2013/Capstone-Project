<body>
    <div class="ui container" id="clubLogin">
        <div class="ui stackable grid">
            <div class="row">

            </div>
            <div class="row">

            </div>
            <div class="three column row">
                <div class="five wide column">

                </div>
                <div class="six wide column" >

                    <div class="ui raised segment teal">
                        <form class="ui form large" method="POST" action="/clubs/login" id="logIn">
                            <h2 class="ui dividing header center aligned teal">
                                Club Log In
                            </h2>
                            <div class="sixteen wide field required">
                                <label for="username">
                                    Username
                                </label>
                                <input type="email" name="username" placeholder="Enter Username ... "  />
                            </div>
                            
                            <div class="sixteen wide field required">
                                <label for="password">
                                    Password
                                </label>
                                <input type="password" name="password" minlength="8" placeholder="Enter password ... "
                                     />
                            </div>
                            <div class="ui list">
                                <div class="item">
                                    <div class="right floated content">
                                        <a href="#"> Forgot Password ? Click Here </a>
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="ui positive button submit fluid">
                                Log In
                            </button>
                            <br />
                            <div class="three column row">
                                <div class="five wide column">
                                    <h5 class="ui header blue right floated">
                                        New Club ? Request Credentials
                                    </h5>
                                </div>
                                <div class="two wide column">

                                </div>
                                <br />
                                <div class="eight wide column">
                                    <button type="button" class="ui button olive fluid" id="signUp">
                                        Sign Up !
                                    </button>

                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div clas="five wide column">

                </div>
            </div>
        </div>
    </div>
    <script src="/scripts/clubs/scripts/login.js"></script>

