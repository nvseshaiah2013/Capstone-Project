<% include ../partials/header %>

</head>

<body>
    <div class="ui container" id="clubLogin">
        <div class="ui stackable grid">
            <div class="row">

            </div>
            <div class="row">

            </div>
            <div class="three column row">
                <div class="five wide column">

                </div>
                <div class="six wide column" >
                    <% if(typeof message != 'undefined') { %>
                        <div class="ui error message">
                            <div class="ui header">
                                Error Message
                            </div>
                            <p>
                                <%= message %>
                            </p>
                        </div>
                    <% } %>    

                    <div class="ui raised segment teal">
                        <form class="ui form large" method="POST" action="/clubs/login" id="logIn">
                            <h2 class="ui dividing header center aligned teal">
                                Club Log In
                            </h2>
                            <div class="sixteen wide field required">
                                <label for="username">
                                    Username
                                </label>
                                <input type="email" name="username" placeholder="for e.g. club1@gmail.com "  />
                            </div>
                            
                            <div class="sixteen wide field required">
                                <label for="password">
                                    Password
                                </label>
                                <input type="password" name="password" minlength="8" placeholder="Enter password ... "
                                     />
                            </div>
                            
                            <button type="submit" class="ui positive button submit fluid">
                                Log In
                            </button>
                            <br />
                            <div class="row"></div>
                        </form>
                    </div>
                </div>
                <div clas="five wide column">

                </div>
            </div>
        </div>
    </div>

    <p class="row">
    
    </p>
    <p class="row">
    
    </p>
    <p style="height: 100px !important;">
    
    </p>
    <script src="/scripts/clubs/scripts/login.js"></script>

    <% include ../partials/footer %>