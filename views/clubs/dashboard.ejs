<% include ../partials/header %>
</head>

<body>
    <div class="ui menu blue inverted large">
        <div class="ui container">
            <a class="item header" href="#">
                LPU COLORS
            </a>
            <a class="active item" href="#">Home</a>
            <div class="right menu">
                <a class="item" href="#">
                    <i class="icon user"></i> Hi <%= club.name %>
                </a>
                <a class="item" href="#"><i class="icon bell"></i> Notifications <i class="ui dropdown icon"></i></a>
                <a class="item" href="#" id="club_signout"><i class="icon sign out"></i> Sign Out</a>
            </div>
        </div>
    </div>
    <form method="GET" action="/" id="formSignOut"></form>
    <div class="ui basic segment" id="mainPage">
        <div class="ui container">
            <div class="ui stackable grid">
                <div class="two column row">
                    <div class="four wide column">
                        <div class="ui card">
                            <div class="image">
                                <img src="/assets/images/21294.png">
                            </div>
                            <div class="content">
                                <a class="header"><%= club.name %></a>
                                <div class="meta">
                                    <span class="date">Founded On <%= club.desc.found_date.toDateString() %></span>
                                </div>
                                <div class="description">
                                    CEO: <%= club.desc.ceo %>
                                </div>
                            </div>
                            <div class="extra content">
                                <div class="ui link list">
                                    <% club.contact.phone_no.forEach(function(phone){ %>
                                    <a class="item" href="tel:<%= phone %>">
                                        <i class="phone icon"></i>

                                        <%= phone %>
                                    </a>
                                    <%   }); %>
                                </div>
                            </div>

                            <div class="content">

                                <div class="ui styled fluid accordion">
                                    <div class="title">
                                        <i class="icon dropdown"></i>
                                        Events
                                    </div>
                                    <div class="content">
                                        <div class="transition hidden">
                                            <div class="ui link list">
                                                <a href="#" class="item" id="ourEvents">
                                                    Our Events
                                                </a>
                                                <a href="#" class="item" id="addEvent">
                                                    Add Event
                                                </a>
                                                <a href="#" class="item" id="eventImages">
                                                    Image Gallery
                                                </a>
                                                <a href="#" class="item" id="eventVideos">
                                                    Video Gallery
                                                </a>
                                                <a href="#" class="item" id="announceWinner">
                                                    Announce Winner
                                                </a>
                                                </div>
                                        </div>
                                    </div>
                                    <div class="title">
                                        <i class="icon dropdown">

                                        </i>
                                        Profile
                                    </div>
                                    <div class="content">
                                        <div class="transition hidden">
                                            <div class="ui link list">
                                                <a href="#" class="item" id="myClubProfile">
                                                    Our Profile
                                                </a>
                                                
                                                <a href="#" class="item">
                                                    Our Members
                                                </a>
                                                <a href="#" class="item">
                                                    Change Password
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="title">
                                        <i class="icon dropdown">

                                        </i>
                                        Students
                                    </div>
                                    <div class="content">
                                        <div class="transition hidden">
                                            <div class="ui link list">
                                                <a href="#" class="item" id="viewIssuedCerts">
                                                    Issued Certificates
                                                </a>
                                                <a href="#" class="item" id="viewRegisteredTeams">
                                                    Registered Teams
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="title">
                                        <i class="icon dropdown">
                                    
                                        </i>
                                        Payments
                                    </div>
                                    <div class="content">
                                        <div class="transition hidden">
                                            <div class="ui link list">
                                                <a href="#" class="item" id="viewAllTransactions">
                                                    All Transactions
                                                </a>
                                                <a href="#" class="item" id="viewAllSuccess">
                                                    Successful Transactions
                                                </a>
                                                <a href="#" class="item" id="viewAllFailed">
                                                    Failed Transactions
                                                </a>
                                                <a href="#" class="item" id="viewAllPending">
                                                    Pending Transactions
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="ten wide column">
                        <div class="one column row">
                            <div class="column">

                            </div>
                        </div>
                        <div class="one column row">
                            <div class="column" id="store">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



    <% if(auth) { %>
    <script>
        localStorage.setItem('__colors__', "<%= auth %>");
        axios.defaults.headers.common['Authorization'] = "Bearer " + "<%= auth %> ";

    </script>
    <% } %>

    <script src="/scripts/clubs/scripts/dashboard.js">

    </script>



    <% include ../partials/footer %>